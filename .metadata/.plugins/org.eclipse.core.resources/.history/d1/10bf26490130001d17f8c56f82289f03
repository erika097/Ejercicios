#include <stdio.h>
#include <stdlib.h>

int mostrarParOImpar(int a);

int main(void) {
	setbuf(stdout, NULL);

	int numero;
	prinf("ingrese un numero");
	scanf("%d", &numero);



	return EXIT_SUCCESS;
}

int mostrarParOImpar(int a)
{
	int retorno;
	if(a % 2 == 0 )
	{
		retorno = 1;
	}
	else
	{
		retorno = 0;
	}
	return retorno;
}
