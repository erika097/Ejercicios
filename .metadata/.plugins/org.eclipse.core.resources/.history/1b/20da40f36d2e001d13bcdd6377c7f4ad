#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int numero;
	int numeroPar;
	int numeroImpar;

	printf("ingrese un numero");
	scanf("%d", &numero);

	if(numero % 2 == 0)
	{
		printf("el numero ingresado es par");
	}
	else
	{
		printf("el numero ingresado es impar");
	}


	return EXIT_SUCCESS;
}
