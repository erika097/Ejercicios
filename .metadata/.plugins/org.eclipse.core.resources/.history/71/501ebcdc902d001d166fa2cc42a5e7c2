#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int num1;
	int num2;
	int suma;
	do{
		printf("ingrese un numero entre -50 y 100: ");
		scanf("%d", &num1);
	}while(num1 > -50 && num1 < 100);

	do{
		printf("ingrese otro numero entre -50 y 100: ");
		scanf("%d", &num2);
	}while(num2 > -50 && num2 < 100);

	suma = num1 + num2;
	printf("los numeros ingresados son: %d y %d", num1, num2);
	printf("\nla suma de los numeros ingresados es: %d", suma);

	return EXIT_SUCCESS;
}
