#include <stdio.h>
#include <stdlib.h>

void mostrarNumero(int num);

int main(void) {
	setbuf(stdout, NULL);

	int numero;

	printf("ingrese un numero");
	scanf("%d", &numero);

	mostrarNumero(numero);

	return EXIT_SUCCESS;
}

void mostrarNumero(int num)
{
	printf("el numero que ingresaste es: %d", num);
	return;
}
