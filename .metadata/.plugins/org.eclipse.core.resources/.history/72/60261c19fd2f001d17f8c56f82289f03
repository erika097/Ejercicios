#include <stdio.h>
#include <stdlib.h>

float pedirFloat();

int main(void) {
	setbuf(stdout, NULL);

	pedirFloat();

	return EXIT_SUCCESS;
}

int pedirFloat()
{
	float numero;
	printf("ingrese un numero decimal");
	scanf("%f", &numero);

	return numero;
}
